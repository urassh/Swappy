<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/start_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/start_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingTop="40dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/logo_glow"
            android:padding="20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logo_circle"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/start_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/start_logo_desc"
                    android:scaleType="centerInside"
                    android:src="@drawable/image_2" />
            </FrameLayout>
        </FrameLayout>

        <com.swappy.sample.StrokeTextView
            android:id="@+id/start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/start_title"
            android:textColor="@color/white_40"
            android:textFontWeight="600"
            android:fontFamily="monospace"
            android:textSize="32sp"
            app:strokeColor="@color/white_50"
            app:strokeWidth="1px" />

        <TextView
            android:id="@+id/start_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/start_subtitle"
            android:textColor="@color/white_80"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/start_rules_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/start_rules_title"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/start_rules_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="@string/start_rules_body"
            android:textColor="@color/white_80"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/start_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@null"
            android:hint="@string/start_name_label"
            android:inputType="textPersonName"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_80"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/white_80" />

        <EditText
            android:id="@+id/start_room_code"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/input_rounded"
            android:gravity="center_vertical"
            android:hint="@string/start_room_code_hint"
            android:includeFontPadding="false"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_80"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@drawable/join_glow_solid">

            <FrameLayout
                android:id="@+id/start_join_container"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@drawable/join_button_body"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/start_join_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:letterSpacing="0.02"
                    android:text="@string/start_join_button"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/join_glow"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-28dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="-28dp"
                    android:layout_marginBottom="0dp"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

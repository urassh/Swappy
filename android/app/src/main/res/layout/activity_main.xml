<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/start_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/start_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingTop="40dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/logo_glow"
            android:padding="20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logo_circle"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/start_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/start_logo_desc"
                    android:scaleType="centerInside"
                    android:src="@drawable/image_2" />
            </FrameLayout>
        </FrameLayout>

        <com.swappy.sample.StrokeTextView
            android:id="@+id/start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/start_title"
            android:textColor="@color/white_40"
            android:textFontWeight="600"
            android:fontFamily="monospace"
            android:textSize="32sp"
            app:strokeColor="@color/white_50"
            app:strokeWidth="1px" />

        <TextView
            android:id="@+id/start_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/start_subtitle"
            android:textColor="@color/white_80"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/start_rules_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/start_rules_title"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/start_rules_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="@string/start_rules_body"
            android:textColor="@color/white_80"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/start_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@null"
            android:hint="@string/start_name_label"
            android:inputType="textPersonName"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_80"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/white_80" />

        <EditText
            android:id="@+id/start_room_code"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/input_rounded"
            android:gravity="center_vertical"
            android:hint="@string/start_room_code_hint"
            android:includeFontPadding="false"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_80"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@drawable/join_glow_solid">

            <FrameLayout
                android:id="@+id/start_join_container"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@drawable/join_button_body"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/start_join_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:letterSpacing="0.02"
                    android:text="@string/start_join_button"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/join_glow"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-28dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="-28dp"
                    android:layout_marginBottom="0dp"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/waiting_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/waiting_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/waiting_room_name"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waiting_room_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/waiting_room_subtitle"
            android:textColor="@color/white_70"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/waiting_member_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/waiting_member_you"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@drawable/waiting_member_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp">

                    <FrameLayout
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/waiting_avatar_bg"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@drawable/swappy_member_icon"
                            android:tint="@color/white_70" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/waiting_member_you_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="@string/waiting_member_you_name"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/waiting_status_wait" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/waiting_status_wait"
                            android:textColor="@color/white_70"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@android:drawable/ic_lock_silent_mode"
                            android:tint="@color/white_60" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/waiting_member_aa"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/waiting_member_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp">

                    <FrameLayout
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/waiting_avatar_bg"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@drawable/swappy_member_icon"
                            android:tint="@color/white_70" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/waiting_member_aa_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="@string/waiting_member_aa_name"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/waiting_status_ready" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/waiting_status_ready"
                            android:textColor="@color/white_80"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@android:drawable/ic_btn_speak_now"
                            android:tint="@color/ready_green" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/waiting_member_mage"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/waiting_member_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp">

                    <FrameLayout
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/waiting_avatar_bg"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@drawable/swappy_member_icon"
                            android:tint="@color/white_70" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/waiting_member_mage_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="@string/waiting_member_mage_name"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/waiting_status_ready" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/waiting_status_ready"
                            android:textColor="@color/white_80"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@android:drawable/ic_btn_speak_now"
                            android:tint="@color/ready_green" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/waiting_member_ranger"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/waiting_member_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp">

                    <FrameLayout
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/waiting_avatar_bg"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@drawable/swappy_member_icon"
                            android:tint="@color/white_70" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/waiting_member_ranger_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="@string/waiting_member_ranger_name"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/waiting_status_ready" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/waiting_status_ready"
                            android:textColor="@color/white_80"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:src="@android:drawable/ic_btn_speak_now"
                            android:tint="@color/ready_green" />
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/waiting_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="-24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/waiting_camera_toggle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_waiting_camera_on" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="2dp">

                <ImageView
                    android:id="@+id/waiting_mic_toggle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_waiting_mic_off" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/waiting_join_glow_solid"
            android:clipChildren="false"
            android:clipToPadding="false">

            <FrameLayout
                android:id="@+id/waiting_join_container"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@drawable/waiting_join_button_body"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/waiting_join_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:letterSpacing="0.02"
                    android:text="@string/start_join_button"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/waiting_join_glow"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-28dp"
                    android:layout_marginEnd="-28dp" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

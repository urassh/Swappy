<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="6dp">
        <shape>
            <corners android:radius="18dp" />
            <solid android:color="#26000000" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="18dp" />
            <gradient
                android:angle="90"
                android:endColor="#18FFFFFF"
                android:startColor="#40FFFFFF" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="18dp" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="28dp">
        <shape>
            <corners android:radius="17dp" />
            <gradient
                android:angle="90"
                android:endColor="#00FFFFFF"
                android:startColor="#26FFFFFF" />
        </shape>
    </item>
</layer-list>

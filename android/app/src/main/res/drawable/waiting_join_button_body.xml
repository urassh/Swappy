<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="15dp" />
            <gradient
                android:angle="0"
                android:startColor="#00C85E"
                android:centerColor="#00B0BD"
                android:endColor="#009BE7" />
        </shape>
    </item>
    <item
        android:top="1dp"
        android:bottom="24dp">
        <shape>
            <corners android:radius="15dp" />
            <gradient
                android:angle="90"
                android:endColor="#00FFFFFF"
                android:startColor="#33FFFFFF" />
        </shape>
    </item>
</layer-list>

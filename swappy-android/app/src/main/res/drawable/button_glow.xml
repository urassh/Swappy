<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:centerX="0.52"
                android:centerY="0.52"
                android:centerColor="@color/shadow_blue"
                android:endColor="@android:color/transparent"
                android:startColor="@color/shadow_blue"
                android:type="radial"
                android:gradientRadius="120dp" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    <item
        android:left="14dp"
        android:top="14dp"
        android:right="14dp"
        android:bottom="14dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
